 <%= form_for @assessment do |f| %>
      <% if @assessment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@assessment.errors.count, "error") %> prohibited this assessment from being saved:</h2>

          <ul>
          <% @assessment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :user_id, value: current_user.id %>
    
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, value: Date.today, class: "form-control radius" %>
      </div>

      <div class="form-group">
        <%= f.label "What time did you go to sleep?" %>
        <%= f.time_field :bed_time,  class: "form-control radius" %>
      </div>
      <div class="form-group">
        <%= f.label "What time did you wake?" %>
        <%= f.time_field :wake_time,  class: "form-control radius" %>
      </div>

      <div class="form-group">
        <%= f.label "How well did you sleep?" %></br>
        <div class="flex-box">
          <div class="">
            <%= f.label(:sleep_quality, "Horrible") %></br>
            <%= f.radio_button(:sleep_quality, "1") %>
          </div>
          <div>
            <%= f.label(:sleep_quality, "Poor") %></br>
            <%= f.radio_button(:sleep_quality, "2") %>
          </div>
          <div>
            <%= f.label(:sleep_quality, "Average") %></br>
            <%= f.radio_button(:sleep_quality, "3") %>
          </div>
          <div>
            <%= f.label(:sleep_quality, "Soundly") %></br>
            <%= f.radio_button(:sleep_quality, "4") %>
          </div>
          <div>
            <%= f.label(:sleep_quality, "Deeply") %></br>
            <%= f.radio_button(:sleep_quality, "5") %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "How tired were you?" %></br>
        <div class="flex-box">
          <div>
            <%= f.label(:fatigue, "Exhausted") %></br>
            <%= f.radio_button(:fatigue, "1") %>
          </div>
          <div>
            <%= f.label(:fatigue, "Tired") %></br>
            <%= f.radio_button(:fatigue, "2") %>
          </div>
          <div>
            <%= f.label(:fatigue, "Normal") %></br>
            <%= f.radio_button(:fatigue, "3") %>
          </div>
          <div>
            <%= f.label(:fatigue, "Rested") %></br>
            <%= f.radio_button(:fatigue, "4") %>
          </div>
          <div>
            <%= f.label(:fatigue, "Replenished") %></br>
            <%= f.radio_button(:fatigue, "5") %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "How is your energy?" %></br>
        <div class="flex-box">
          <div>
            <%= f.label(:energy, "Lathargic") %></br>
            <%= f.radio_button(:energy, "1") %>
          </div>
          <div>
            <%= f.label(:energy, "Subdued") %></br>
            <%= f.radio_button(:energy, "2") %>
          </div>
          <div>
            <%= f.label(:energy, "Normal") %></br>
            <%= f.radio_button(:energy, "3") %>
          </div>
          <div>
            <%= f.label(:energy, "Amped") %></br>
            <%= f.radio_button(:energy, "4") %>
          </div>
          <div>
            <%= f.label(:energy, "Exuberant") %></br>
            <%= f.radio_button(:energy, "5") %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "How was your mood?" %></br>
        <div class="mood-box">
          <%= f.hidden_field(:wellbeing, value: @assessment.wellbeing || 0, id: "assessment-wellbeing") %>
          <%= link_to (fa_icon('sad-tear', type: :regular)), 'javascript:;', class: 'face-icon', data: { :id => "1" } %>
          <%= link_to (fa_icon('frown', type: :regular)), 'javascript:;', class: 'face-icon', data: { :id => "2" } %>
          <%= link_to (fa_icon('meh', type: :regular)), 'javascript:;', class: 'face-icon', data: { :id => "3" } %>
          <%= link_to (fa_icon('smile', type: :regular)), 'javascript:;', class: 'face-icon', data: { :id => "4" } %>
          <%= link_to (fa_icon('grin', type: :regular)), 'javascript:;', class: 'face-icon', data: { :id => "5" } %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Did you exercise?" %></br>
        <div class="radio-buttons">
          <%= f.label(:exercise, "yes") %></br>
          <%= f.radio_button(:exercise, true) %>
        </div>
        <div class="radio-buttons">
          <%= f.label(:exercise, "No") %></br>
          <%= f.radio_button(:exercise, false) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Did you have the kids?" %></br>
        <div class="radio-buttons">
          <%= f.label(:have_kids, "yes") %></br>
          <%= f.radio_button(:have_kids, true) %>
        </div>
        <div class="radio-buttons">
          <%= f.label(:have_kids, "No") %></br>
          <%= f.radio_button(:have_kids, false) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Did you have sex? :)" %></br>
        <div class="radio-buttons">
          <%= f.label(:sex, "yes") %></br>
          <%= f.radio_button(:sex, true) %>
        </div>
        <div class="radio-buttons">
          <%= f.label(:sex, "No") %></br>
          <%= f.radio_button(:sex, false) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :comment %></br>
        <%= f.text_area :comment, class: "form-control radius" %>
      </div>

      <div class="wide-submit">
        <%= f.submit "SUBMIT", class: "btn btn-success" %>
      </div>
      

    <% end %>
<script type="text/javascript">
  
    value = $('#assessment-wellbeing').val()
    $("a[data-id=" + value + " ]").addClass('selected-face');
 
</script>
